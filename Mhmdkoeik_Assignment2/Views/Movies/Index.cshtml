@model List<Mhmdkoeik_Assignment2.Models.Movie>

@{
    ViewBag.Title = "Index";
}


@if (!Model.Any())
{
    <text>No movies yet.</text>

}

else
{
    <h2>Movies</h2>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.id }, null)</td>
                </tr>
            }
        </tbody>
    </table>

}